class Solution {
    public String reformatDate(String date) {
        Map<String,String> map = new HashMap<>();
        map.put("Jan","01"); 
        map.put("Feb","02"); 
        map.put("Mar","03"); 
        map.put("Apr","04");
        map.put("May","05"); 
        map.put("Jun","06"); 
        map.put("Jul","07"); 
        map.put("Aug","08");
        map.put("Sep","09"); 
        map.put("Oct","10"); 
        map.put("Nov","11"); 
        map.put("Dec","12");
        String year = date.substring(date.length()-4, date.length());
        StringBuilder sb = new StringBuilder();
        if(date.length()==13){
            return sb.append(year).append("-")
            .append(map.get(date.substring(5, 8)))
            .append("-").append(date.substring(0, 2))
            .toString();
        }
        return sb.append(year).append("-")
        .append(map.get(date.substring(4, 7)))
        .append("-").append("0").append(date.substring(0,1))
        .toString();
    }
}
